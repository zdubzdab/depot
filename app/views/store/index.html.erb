<div id="store_page">
  <div id="side">
    <% if @cart %>
      <div id="cart">
        <%= render @cart %>
      </div>
    <% end %>
  </div>

  <div id="main">
    <h1>Books Catalog</h1>
    <% @products.each do |product| %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <p><%= sanitize(product.description) %></p>
        <div class="price_line">
          <span class="price"><%= sprintf("$%0.02f", product.price) %></span>
          <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, class: "btn btn-warning", id: "b_add_to_cart" %>
        </div>
      </div>
    <% end %>
</div>
