<div class="span3" id="profile_panel">
  <h4>My name: <%= current_user.name %></h4>
  <h4>My email: <%= current_user.email %></h4>
  <h4>My phone: <%= current_user.phone %></h4><br>
  <%= link_to 'Edit my profile', edit_user_registration_path, class: "link" %><br><br>
</div>

<div class="span3" id="left_text">
  <% if current_user.orders.any? %>
    <p class="p">I have <%= current_user.orders.count %> orders</p><br>
  <% else %>
    <p class="p">I have 0 orders</p><br>
  <% end %>

  <% if current_user.products.any? %>
    <p class="p">I have <%= current_user.products.count %> products</p><br>
  <% else %>
    <p class="p">I have 0 products</p><br>
  <% end %>
</div>

<div class="span8" id="products_panel">
  <h3>Listing Products</h3>
  <%= render 'products/products' %>

  <%= link_to 'Add new product', new_product_path %>
</div>

<div class="span8" id="orders_panel">
  <% if current_user.orders.any? %>
  <h4>Orders:</h4>
    <% current_user.orders.each do |order| %>
      <ol class="list">
        <b><%= link_to (order.name), order_path(order) %></b> (ordered <%= time_ago_in_words(order.created_at) %> ago)
      </ol>
    <% end %>
  <% end %>
</div>

