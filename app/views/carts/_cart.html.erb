<div class="" id="table_and_buttons">
  <h4>Your Cart</h4>
    <% if @cart.line_items.any? %>
      <table class="cart_table">
        <%= render(cart.line_items) %>
        <tr class="total_line">
          <td>Total</td>
          <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
        </tr>
      </table>
        <%= button_to "Checkout", new_order_path, method: :get, class: "btn btn-info" %>
        <%= button_to 'Empy cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-info"  %><br>
    <% else %>
    <h4>is empty.</h4>
  <% end %><br>
</div>